{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "listFiles": false,
    "traceResolution": false,
    "skipLibCheck": true,
    "pretty": true,
    "lib" : [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    // "src/**/*.spec.ts"
  ],
  "compileOnSave": false,

  /* Strict Options */
  "strictNullChecks": true,
  "forceConsistentCasingInFileNames": true,
  "noFallthroughCasesInSwitch": true,
  "noImplicitAny" : true,
  "noImplicitReturns": true,
  "noImplicitThis": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,

  /* Generated Docs */
  "typedocOptions": {
    "exclude": "**/*.spec.ts",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "name": "filestack-js",
    "out": "build/docs",
    "readme": "README.md",
    "theme": "default"
  }
}
